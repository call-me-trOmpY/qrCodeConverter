<Window x:Class="QrCodeConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QrCodeConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Button Content="Open File"
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch"
                Margin="50,0,0,24" Width="96" Height="32"/>
        
        <Button Content="Browse File"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="50,50,0,0"
                Width="96"
                Height="32"
                Click="BrowseFileButton_Click"/>
        
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20,5,30,50" Width="96" Height="32" Click="CancelButton_Click"/>  
        
        
    </Grid>
</Window>
